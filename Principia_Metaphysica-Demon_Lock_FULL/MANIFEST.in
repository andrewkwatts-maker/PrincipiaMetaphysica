# MANIFEST.in for Principia Metaphysica v16.2
# Ensures all critical data files are included in the distribution

# JSON Data Files - The "DNA" of the theory
include simulations/data/experimental/*.json
include simulations/validation/*.json
include AutoGenerated/*.json

# Documentation
include README.md
include LICENSE
include CONTRIBUTING.md
include CITATION.cff

# Validation Reports
include reports/*.txt
include reports/*.pdf

# Theory Documentation
include docs/*.html
include docs/*.md
include PROOFS/*.md
include PROOFS/*.wl

# Exclude development files
exclude .claude/*
exclude .git/*
exclude tests/*
exclude drafts/*
exclude __pycache__/*
global-exclude *.pyc
global-exclude *.pyo
global-exclude .DS_Store
